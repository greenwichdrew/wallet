<p id="notice"><%= notice %></p>

<h1>Listing Debit Cards</h1>

<table>
  <thead>
    <tr>
      <th>Transaction number</th>
      <th>Deposits</th>
      <th>Withdraws</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @debit_cards.each do |debit_card| %>
      <tr>
        <td><%= debit_card.transaction_number %></td>
        <td><%= debit_card.deposits %></td>
        <td><%= debit_card.withdraws %></td>
        <td><%= debit_card.balance %></td>
        <td><%= link_to 'Show', debit_card %></td>
        <td><%= link_to 'Edit', edit_debit_card_path(debit_card) %></td>
        <td><%= link_to 'Destroy', debit_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

